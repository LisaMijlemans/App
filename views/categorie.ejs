<% include header %>
<nav class="categorie">
  <% for (var i = 0; i < categorieen.length; i++) { %>
    <a href="/categorieen/<%- i %>"><%- categorieen[i] %></a>
  <% } %>
</nav>
<h1><a href="/">home</a></h1>

<h2 class="cat"><%- categorieen[id] %></h2>

  <% for (var i = 0; i < items.length; i++) { %>
    <% if (items[i].categorieen.indexOf(categorieen[id]) !== -1) { %>
      <section>
          <h2>
            <a href=/items/<%- items[i].id %>><%- items[i].titel %></a>
          </h2>
          <img src="/img/<%- items[i].afbeeldings %>" alt="<%- items[i].titel %>">

          <p class="datum"><%- items[i].datum %></p>
          <p class="samenvatting"><%- items[i].samenvatting %></p>
      </section>
    <% } %>
  <% } %>

<% include footer %>
